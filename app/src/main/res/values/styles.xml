<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyColorPickerDialogTheme" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="android:background">@drawable/background_dialog</item>
        <item name="background">@drawable/background_dialog</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <!-- Add more attributes as needed -->
    </style>

    <style name="DialogStyle" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="AuthenticationInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
    </style>
</resources>